!!!
%html
  %head
    %link{ :href => '/css/app.css', :media => 'all', :rel => 'stylesheet', :type => 'text/css' } 
    %script{ :src => '/javascript/jquery.js', :type => 'text/javascript' }
    %script{ :src => '/javascript/underscore.js', :type => 'text/javascript' }
    %script{ :src => '/javascript/backbone.js', :type => 'text/javascript' }
    %script#databaseItemTemplate{ :type => 'text/template' }
      :plain
        <li class='databaseItem' data-id='<%= id %>' data-url='<%= url %>'>
          <a class='treeIcon'></a>
          <span><%= name %></span>
          <ul class='childCollection'></ul>
        </li>
    %script#collectionItemTemplate{ :type => 'text/template' }
      :plain
        <li class='collectionItem' data-id='<%= id %>' data-url='<%= url %>'><span><%= name %></span></li>
    %script#databaseDetailTemplate{ :type => 'text/template' }
      :plain
        <h3 class='contentTitle'><%= name %></h3>
    %script#collectionDetailTemplate{ :type => 'text/template' }
      :plain
        <h3 class='contentTitle'><%= name %></h3>
        <p><span class='detailLabel'>Document Count:</span><span class='detailValue'><%= documentCount %></span></p>
        <p><span class='detailLabel'>Size:</span><span class='detailValue'><%= size %></span></p>
        <p><span class='detailLabel'>Storage Size:</span><span class='detailValue'><%= storageSize %></span></p>
        <p><span class='detailLabel'>Index Count:</span><span class='detailValue'><%= indexCount %></span></p>
        <p><span class='detailLabel'>Index Size:</span><span class='detailValue'><%= indexSize %></span></p>
    =partial :scripts
  %body
    %div#container
      %div#navigation
        %h3.navigationTitle localhost
        %ul#databaseList
      %div#content Some content goes here...
