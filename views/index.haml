!!!
%html
  %head
    %link{ :href => '/css/app.css', :media => 'all', :rel => 'stylesheet', :type => 'text/css' } 
    %script{ :src => '/javascript/jquery.js', :type => 'text/javascript' }
    %script{ :src => '/javascript/underscore.js', :type => 'text/javascript' }
    %script{ :src => '/javascript/backbone.js', :type => 'text/javascript' }
    %script{ :src => '/javascript/app.js', :type => 'text/javascript' }
    %script#resourceTemplate{ :type => 'text/template' }
      :plain
        <li class='resourceLink' id='<%= id %>'><a href='#<%= url %>'><%= name %></a><a class='delete' href='#<%= url + '/delete' %>'></a></li>
    %script#resourceDetailTemplate{ :type => 'text/template' }
      :plain
        <input id='docID' type='hidden' value='<%= id %>'></input>
        <div id='docTitle' class='title' tabindex='1' contenteditable='true'><%= name %></div>
        <div id='docContent' tabindex='2' contenteditable='true'><%= data %></div>
  %body
    %div#container
      %span hello from haml

